<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnVideoPlay"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="视频播放"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnPlaying"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="CoordinatorLayout的使用"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnScrollableLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="置顶的ScrollableLayout"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnEmojiLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="Emoji的使用"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnRecorderVideoLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="RecorderVideo"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnOpenGLVideoLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="OpenGLVideo"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnEasyCameraVideoLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="EasyCameraVideo"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnVoicePlayer"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="Canvas的使用"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="BottomSheet"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSnapHelper"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="SnapHelper的使用"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSkinStore"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="Skin的使用"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnViewPager"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="ViewPager实现垂直翻页"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btnGalleryLayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="GalleryLayout的使用"
            android:textColor="@color/white" />


    </LinearLayout>

</ScrollView>